{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Flask: moneypit",
      "type": "debugpy",
      "request": "launch",
      "module": "flask",
      "args": ["run", "--host", "0.0.0.0", "--port", "5180", "--debug"],
      "env": {
        "FLASK_APP": "server.py",
        "FLASK_ENV": "development"
      },
      "python": "${workspaceFolder}/venv/bin/python",
      "jinja": true,
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}"
    }
  ]
}
